<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/listrow_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp">

            <TextView
                android:id="@+id/listrow_name"
                android:text="Restaurant name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/listrow_specialties"
                android:layout_below="@id/listrow_name"
                android:text="specialties: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/listrow_average_price_for_two"
                android:text="Average price for two: "
                android:textStyle="italic"
                android:layout_below="@id/listrow_specialties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"/>

            <TableRow
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/listrow_average_price_for_two"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/custominfo_btn_moreinfo"
                    android:text="More info..."
                    android:textStyle="bold"
                    android:fontFamily="@font/fredokaone"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </TableRow>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>