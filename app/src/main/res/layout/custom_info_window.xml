<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:scaleType="matrix"
                    android:alpha=".5"
                    app:srcCompat="@drawable/infowindow_vichy_background" />


                <ImageView
                    android:id="@+id/custominfo_iconInfo"
                    android:src="@android:drawable/ic_menu_info_details"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <TextView
                    android:id="@+id/custominfo_title"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Nom du restaurant"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_toRightOf="@id/custominfo_iconInfo"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>


                <TextView
                    android:id="@+id/custominfo_specialties"
                    android:layout_toRightOf="@id/custominfo_iconInfo"
                    android:layout_below="@id/custominfo_title"
                    android:paddingBottom="10dp"
                    android:text="SpecialitÃ©s"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <Button
                    android:id="@+id/btn"
                    android:layout_alignBaseline="@id/custominfo_specialties"
                    android:layout_marginLeft="10dp"
                    android:text="More info..."
                    android:layout_toRightOf="@id/custominfo_title"
                    android:layout_alignBottom="@id/custominfo_specialties"
                    android:background="@android:color/transparent"
                    android:textColor="@color/colorAccent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </RelativeLayout>



        </android.support.v7.widget.CardView>
    </LinearLayout>

